<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/id_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dadada" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/id_ll1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/id_iv1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_sq_selected" />

                <TextView
                    android:id="@+id/id_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="13.0dp"
                    android:text="书圈" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/id_ll2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/id_iv2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_msg_no_selected" />

                    <TextView
                        android:id="@+id/id_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="13.0dp"
                        android:text="消息" />

                </LinearLayout>

                <TextView
                    android:id="@+id/id_circle_hint"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/ng_circle"
                    android:gravity="center"
                    android:textSize="14.0dp"
                    android:textColor="@color/base_color_text_white"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/id_ll3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/id_iv3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_me_no_selected" />

                <TextView
                    android:id="@+id/id_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="13.0dp"
                    android:text="我" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!--drawer布局-->

    <LinearLayout
        android:id="@+id/left_draw"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_title_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="筛 选"
            android:textColor="#fff"
            android:textSize="16.0dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/tv_selector"
                android:clickable="true"
                android:text="全部书籍"
                android:textColor="@color/tab_text_normal"
                android:textSize="14.0dp"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="16.0dp"/>

            <TextView
                android:id="@+id/id_xs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv_selector"
                android:clickable="true"
                android:text="文学小说"
                android:textColor="@color/tab_text_normal"
                android:textSize="14.0dp"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="16.0dp"/>

            <TextView
                android:id="@+id/id_lz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv_selector"
                android:clickable="true"
                android:text="青春励志"
                android:textColor="@color/tab_text_normal"
                android:textSize="14.0dp"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="16.0dp"/>

            <TextView
                android:id="@+id/id_zj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv_selector"
                android:clickable="true"
                android:text="历史传记"
                android:textColor="@color/tab_text_normal"
                android:textSize="14.0dp"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="16.0dp"/>

            <TextView
                android:id="@+id/id_gl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv_selector"
                android:clickable="true"
                android:text="经济管理"
                android:textColor="@color/tab_text_normal"
                android:textSize="14.0dp"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="16.0dp"/>

            <TextView
                android:id="@+id/id_ys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv_selector"
                android:clickable="true"
                android:text="生活艺术"
                android:textColor="@color/tab_text_normal"
                android:textSize="14.0dp"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="16.0dp"/>

            <TextView
                android:id="@+id/id_hy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv_selector"
                android:clickable="true"
                android:text="数理化英"
                android:textColor="@color/tab_text_normal"
                android:textSize="14.0dp"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="16.0dp"/>

            <TextView
                android:id="@+id/id_js"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv_selector"
                android:clickable="true"
                android:text="专业技术"
                android:textColor="@color/tab_text_normal"
                android:textSize="14.0dp"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="16.0dp"/>

            <TextView
                android:id="@+id/id_kszq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv_selector"
                android:clickable="true"
                android:text="考试专区"
                android:textColor="@color/tab_text_normal"
                android:textSize="14.0dp"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="16.0dp"/>

            <TextView
                android:id="@+id/id_qt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv_selector"
                android:clickable="true"
                android:text="其他书籍"
                android:textColor="@color/tab_text_normal"
                android:textSize="14.0dp"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="16.0dp"/>

            <TextView
                android:id="@+id/tv_null"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_logout"
            android:onClick="logout"
            android:text="注     销"
            android:textColor="#fff"
            android:textSize="16.0dp"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
