<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00BAED"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:onClick="finishThis"
            android:src="@drawable/ic_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="20dp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/id_un"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="#fff"
        android:hint="昵 称"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14.0dp"
        android:textColorHint="#969696" />

    <EditText
        android:id="@+id/id_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:hint="手 机 号"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14.0dp"
        android:textColorHint="#969696" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id_et_keys"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.5"
            android:background="#fff"
            android:hint="验证码"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14.0dp"
            android:textColorHint="#969696" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#dadada" />

        <TextView
            android:id="@+id/id_keys"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#fff"
            android:gravity="center"
            android:hint="获取验证码"
            android:padding="10dp"
            android:textColor="#00BAED" />

    </LinearLayout>

    <EditText
        android:id="@+id/id_pass1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:hint="新 密 码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14.0dp"
        android:textColorHint="#969696" />

    <EditText
        android:id="@+id/id_pass2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext"
        android:hint="确 认 密 码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14.0dp"
        android:textColorHint="#969696" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <CheckBox
            android:id="@+id/id_isRead2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="已阅读"
            android:textColor="#969696"
            android:textSize="14.0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="《用户使用协议》"
            android:textColor="#00BAED"
            android:textSize="14.0dp" />

    </LinearLayout>


    <Button
        android:id="@+id/id_regist"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_login"
        android:text="完 成"
        android:textColor="#ffff"
        android:textSize="16.0dp" />
</LinearLayout>